<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.berlinquiz.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Picture -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagedesc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/berlin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/headline"
                    android:textSize="28sp"
                    android:textColor="#ffffff"
                    android:shadowColor="#000000"
                    android:shadowRadius="5"/>

            </RelativeLayout>

            <!-- /Header -->

            <!-- Quiz Body -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <!-- Nickname request -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_marginBottom="8dp"
                        android:text="@string/welcome" />

                    <EditText
                        android:id="@+id/name_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:inputType="textCapWords" />

                </LinearLayout>

                <!-- /Nickname request -->

                <!-- Question 1 (Radio Buttons) -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/question1Intro" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/question1answer1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/question1answer1" />

                        <RadioButton
                            android:id="@+id/question1answer2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/question1answer2" />

                        <RadioButton
                            android:id="@+id/question1answer3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/question1answer3" />

                        <RadioButton
                            android:id="@+id/question1answer4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/question1answer4" />

                    </RadioGroup>

                </LinearLayout>

                <!-- /Question 1 -->

                <!-- Question 2 (Checkboxes) -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/question2Intro" />

                    <CheckBox
                        android:id="@+id/question2answer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question2answer1" />

                    <CheckBox
                        android:id="@+id/question2answer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question2answer2" />

                    <CheckBox
                        android:id="@+id/question2answer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question2answer3" />

                    <CheckBox
                        android:id="@+id/question2answer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question2answer4" />

                </LinearLayout>

                <!-- /Question 2 -->

                <!-- Question 3 (Checkboxes) -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
