                    <CheckBox
                        android:id="@+id/question7answer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question7answer4" />

                </LinearLayout>

                <!-- /Question 7 -->

                <!-- Question 6 (Radio Buttons) -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/question8Intro" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/question8answer1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/question8answer1" />

                        <RadioButton
                            android:id="@+id/question8answer2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/question8answer2" />

                        <RadioButton
                            android:id="@+id/question8answer3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/question8answer3" />

                        <RadioButton
                            android:id="@+id/question8answer4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/question8answer4" />

                    </RadioGroup>

                </LinearLayout>

                <!-- /Question 8 -->

                <!-- Question 9 (Checkboxes) -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/question9Intro" />

                    <CheckBox
                        android:id="@+id/question9answer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question9answer1" />

                    <CheckBox
                        android:id="@+id/question9answer2"
                        android:layout_width="match_parent"
